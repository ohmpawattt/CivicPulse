{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "./contracts/**/*",
    "./deploy/**/*",
    "./tasks/**/*",
    "./test/**/*",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "cache",
    "coverage"
  ]
}


